<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddEventActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorAccent"
        app:layout_scrollFlags="scroll|enterAlways">
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Submit an Event" />
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/tvEventName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="88dp"
        android:text="Event Name" />

    <TextView
        android:id="@+id/tvEventLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvEventName"
        android:layout_alignParentStart="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="30dp"
        android:text="Event Location" />

    <TextView
        android:id="@+id/tvEventTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvEventLocation"
        android:layout_alignParentStart="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="38dp"
        android:text="Event Time" />

    <TextView
        android:id="@+id/tvEventDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvEventTime"
        android:layout_alignParentStart="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="47dp"
        android:text="Event Date" />

    <TextView
        android:id="@+id/tvEventDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvEventDate"
        android:layout_alignParentStart="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="49dp"
        android:text="Event Description" />

    <TextView
        android:id="@+id/tvEventImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvEventDate"
        android:layout_alignParentStart="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="124dp"
        android:text="Event Image" />

    <Button
        android:id="@+id/btnPost"
        android:layout_width="123dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="16dp"
        android:background="@color/colorAccent"
        android:text="Submit Event"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btnUploadImage"
        android:layout_width="123dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvEventImage"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="264dp"
        android:background="@color/colorAccent"
        android:text="Upload Image"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/etEventName"
        android:layout_width="171dp"
        android:layout_height="19dp"
        android:layout_alignTop="@+id/tvEventName"
        android:layout_marginStart="97dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/tvEventName"
        android:ems="10" />

    <EditText
        android:id="@+id/etEventLocation"
        android:layout_width="171dp"
        android:layout_height="19dp"
        android:layout_alignTop="@+id/tvEventName"
        android:layout_marginStart="96dp"
        android:layout_marginTop="52dp"
        android:layout_toEndOf="@+id/tvEventName"
        android:ems="10" />

    <EditText
        android:id="@+id/etEventTime"
        android:layout_width="171dp"
        android:layout_height="19dp"
        android:layout_alignTop="@+id/tvEventName"
        android:layout_marginStart="102dp"
        android:layout_marginTop="106dp"
        android:layout_toEndOf="@+id/tvEventName"
        android:ems="10"
        android:inputType="time" />

    <EditText
        android:id="@+id/etEventDate"
        android:layout_width="171dp"
        android:layout_height="19dp"
        android:layout_alignTop="@+id/tvEventName"
        android:layout_marginStart="99dp"
        android:layout_marginTop="174dp"
        android:layout_toEndOf="@+id/tvEventName"
        android:ems="10"
        android:inputType="date" />

    <EditText
        android:id="@+id/etEventDescription"
        android:layout_width="171dp"
        android:layout_height="19dp"
        android:layout_alignTop="@+id/tvEventName"
        android:layout_marginStart="98dp"
        android:layout_marginTop="242dp"
        android:inputType="textMultiLine"
        android:lines="10"
        android:minLines="6"
        android:gravity="top|left"
        android:maxLines="10"
        android:layout_toEndOf="@+id/tvEventName"
        android:ems="10" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="166dp"
        android:layout_height="142dp"
        android:layout_below="@+id/etEventDescription"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="51dp"
        android:layout_marginEnd="40dp"
        tools:srcCompat="@tools:sample/avatars" />
</RelativeLayout>